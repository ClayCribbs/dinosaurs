.container-fluid
  .row
    .col-sm-12
      %h1.text-center Photos
      .container-fluid
        .row
          .col-sm-12
            = link_to 'New Photo', new_admin_photo_path, class: 'btn btn-primary'
            %br
            %br
        .row
          - @photos.each do |photo|
            .col-sm-3.text-center
              = link_to admin_photo_path(photo) do
                = image_tag photo.featured_image
                %td= link_to 'Edit', edit_admin_photo_path(photo)
                %td= link_to 'Destroy', admin_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' }

